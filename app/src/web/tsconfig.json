{
  "compilerOptions": {
    "target": "es3",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    // Extras
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "removeComments": true,
    "outDir": "assets/js"
  },
  "include": [
    "ts", "typings"
  ]
}
